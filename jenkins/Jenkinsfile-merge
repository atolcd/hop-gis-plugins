#!/usr/bin/env groovy

pipeline {
  options {
    buildDiscarder(logRotator(numToKeepStr: '10'))
    disableConcurrentBuilds()
  }
  agent any
  stages {
    stage('Build') {
      steps {
        script {
          docker.image('maven:3-jdk-11').inside() {
            sh "mvn -Duser.home=${env.WORKSPACE} -B -U -e -ff " +
              'clean package'
          }
        }
      }
    }
  }
  post {
    success {
      archiveArtifacts allowEmptyArchive: true, fingerprint: true,
        artifacts: 'assemblies/target/gis-plugin-assemblies-*.jar'
    }
    always {
      script {
        sh 'git checkout -- .'
        zulipNotification stream: 'xxx-gis-plugins', topic: 'reviews'
      }
    }
  }
}
